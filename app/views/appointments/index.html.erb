<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <!-- Page header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2 class="mb-1">
            <i class="bi bi-calendar-check text-primary me-2"></i>
            Lịch hẹn
          </h2>
          <p class="text-muted mb-0">
            Lịch hẹn của <%= @patient.name %> (Chủ nuôi: <%= @patient.owner.name %>)
          </p>
        </div>
        <%= link_to new_owner_patient_appointment_path(@patient.owner, @patient), class: "btn btn-primary" do %>
          <i class="bi bi-plus-circle me-2"></i>
          Tạo lịch hẹn mới
        <% end %>
      </div>



      <!-- Appointments list -->
      <div class="card shadow-sm">
        <div class="card-body">
          <% if @appointments.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Ngày giờ</th>
                    <th>Loại</th>
                    <th>Trạng thái</th>
                    <th>Ghi chú</th>
                    <th>Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  <% @appointments.each do |appointment| %>
                    <tr>
                      <td>
                        <strong><%= format_datetime(appointment.scheduled_at) %></strong>
                      </td>
                      <td>
                        <span class="badge bg-info"><%= appointment.display_type %></span>
                      </td>
                      <td>
                        <span class="<%= status_badge_class(appointment.status) %>">
                          <%= appointment.display_status %>
                        </span>
                      </td>
                      <td>
                        <% if appointment.notes.present? %>
                          <small class="text-muted"><%= truncate(appointment.notes, length: 50) %></small>
                        <% else %>
                          <span class="text-muted">-</span>
                        <% end %>
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm" role="group">
                          <%= link_to "Xem", owner_patient_appointment_path(@patient.owner, @patient, appointment), class: "btn btn-outline-primary" %>
                          <%= link_to "Sửa", edit_owner_patient_appointment_path(@patient.owner, @patient, appointment), class: "btn btn-outline-secondary" %>
                          <%= link_to "Xóa", owner_patient_appointment_path(@patient.owner, @patient, appointment), 
                              method: :delete, 
                              data: { confirm: "Bạn có chắc chắn muốn xóa lịch hẹn này?" },
                              class: "btn btn-outline-danger" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="bi bi-calendar-x text-muted fs-1"></i>
              <p class="text-muted mt-2">Chưa có lịch hẹn nào</p>
              <%= link_to "Tạo lịch hẹn đầu tiên", new_owner_patient_appointment_path(@patient.owner, @patient), class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Back to patient -->
      <div class="mt-3">
        <%= link_to owner_patient_path(@patient.owner, @patient), class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-2"></i>
          Quay lại thông tin bệnh nhân
        <% end %>
      </div>
    </div>
  </div>
</div>
