<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to 'Chủ nuôi', owners_path %></li>
          <li class="breadcrumb-item"><%= link_to @owner.name, owner_path(@owner) %></li>
          <li class="breadcrumb-item active">Bệnh nhân</li>
        </ol>
      </nav>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Danh sách Bệnh nhân của <%= @owner.name %></h1>
        <%= link_to 'Thêm bệnh nhân mới', new_owner_patient_path(@owner), class: 'btn btn-primary' %>
      </div>

      <% if @patients.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>Tên</th>
                <th>Loài</th>
                <th>Giống</th>
                <th>Giới tính</th>
                <th>Tuổi</th>
                <th>Cân nặng</th>
                <th>Số lịch hẹn</th>
                <th>Thao tác</th>
              </tr>
            </thead>
            <tbody>
              <% @patients.each do |patient| %>
                <tr>
                  <td><strong><%= patient.name %></strong></td>
                  <td><%= patient.species %></td>
                  <td><%= patient.breed %></td>
                  <td><%= gender_display(patient.gender) %></td>
                  <td><%= patient.age_display %></td>
                  <td><%= patient.weight_display %></td>
                  <td>
                    <span class="badge bg-info"><%= patient.appointments.count %></span>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <%= link_to 'Xem', owner_patient_path(@owner, patient), class: 'btn btn-sm btn-outline-primary' %>
                      <%= link_to 'Sửa', edit_owner_patient_path(@owner, patient), class: 'btn btn-sm btn-outline-warning' %>
                      <%= link_to 'Lịch hẹn', owner_patient_appointments_path(@owner, patient), class: 'btn btn-sm btn-outline-info' %>
                      <%= link_to 'Xóa', owner_patient_path(@owner, patient), 
                          method: :delete, 
                          data: { confirm: 'Bạn có chắc chắn muốn xóa bệnh nhân này?' },
                          class: 'btn btn-sm btn-outline-danger' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-info text-center">
          <h4>Chưa có bệnh nhân nào</h4>
          <p>Hãy thêm bệnh nhân đầu tiên cho chủ nuôi này.</p>
          <%= link_to 'Thêm bệnh nhân mới', new_owner_patient_path(@owner), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to 'Quay lại', owner_path(@owner), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
