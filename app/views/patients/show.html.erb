<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to 'Chủ nuôi', owners_path %></li>
          <li class="breadcrumb-item"><%= link_to @owner.name, owner_path(@owner) %></li>
          <li class="breadcrumb-item"><%= link_to 'Bệnh nhân', owner_patients_path(@owner) %></li>
          <li class="breadcrumb-item active"><%= @patient.name %></li>
        </ol>
      </nav>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Thông tin Bệnh nhân: <%= @patient.name %></h1>
        <div class="btn-group" role="group">
          <%= link_to 'Sửa', edit_owner_patient_path(@owner, @patient), class: 'btn btn-warning' %>
          <%= link_to 'Quay lại', owner_patients_path(@owner), class: 'btn btn-secondary' %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Thông tin Bệnh nhân</h5>
            </div>
            <div class="card-body">
              <table class="table table-borderless">
                <tr>
                  <td><strong>Tên:</strong></td>
                  <td><%= @patient.name %></td>
                </tr>
                <tr>
                  <td><strong>Loài:</strong></td>
                  <td><%= @patient.species %></td>
                </tr>
                <tr>
                  <td><strong>Giống:</strong></td>
                  <td><%= @patient.breed %></td>
                </tr>
                <tr>
                  <td><strong>Giới tính:</strong></td>
                  <td><%= gender_display(@patient.gender) %></td>
                </tr>
                <tr>
                  <td><strong>Tuổi:</strong></td>
                  <td><%= @patient.age_display %></td>
                </tr>
                <tr>
                  <td><strong>Cân nặng:</strong></td>
                  <td><%= @patient.weight_display %></td>
                </tr>
                <tr>
                  <td><strong>Ghi chú:</strong></td>
                  <td><%= @patient.notes || 'Không có ghi chú' %></td>
                </tr>
                <tr>
                  <td><strong>Ngày tạo:</strong></td>
                  <td><%= format_datetime_vn(@patient.created_at) %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Thống kê</h5>
            </div>
            <div class="card-body">
              <div class="row text-center">
                <div class="col-6">
                  <div class="border rounded p-3">
                    <h3 class="text-primary"><%= @patient.appointments.count %></h3>
                    <p class="mb-0">Lịch hẹn</p>
                  </div>
                </div>
                <div class="col-6">
                  <div class="border rounded p-3">
                    <h3 class="text-success"><%= @patient.appointments.completed.count %></h3>
                    <p class="mb-0">Đã hoàn thành</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Appointments section -->
      <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2>Lịch sử Lịch hẹn</h2>
          <%= link_to 'Thêm lịch hẹn mới', new_owner_patient_appointment_path(@owner, @patient), class: 'btn btn-success' %>
        </div>

        <% if @patient.appointments.any? %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Ngày giờ</th>
                  <th>Bác sĩ</th>
                  <th>Loại</th>
                  <th>Trạng thái</th>
                  <th>Thao tác</th>
                </tr>
              </thead>
              <tbody>
                <% @patient.appointments.each do |appointment| %>
                  <tr>
                    <td><%= format_datetime_vn(appointment.scheduled_at) %></td>
                    <td><%= appointment.veterinarian_name %></td>
                    <td><%= appointment.display_type %></td>
                    <td>
                      <span class="<%= status_badge_class(appointment.status) %>">
                        <%= appointment.display_status %>
                      </span>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <%= link_to 'Xem', owner_patient_appointment_path(@owner, @patient, appointment), class: 'btn btn-sm btn-outline-primary' %>
                        <%= link_to 'Sửa', edit_owner_patient_appointment_path(@owner, @patient, appointment), class: 'btn btn-sm btn-outline-warning' %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="alert alert-info text-center">
            <h4>Chưa có lịch hẹn nào</h4>
            <p>Hãy tạo lịch hẹn đầu tiên cho bệnh nhân này.</p>
            <%= link_to 'Thêm lịch hẹn mới', new_owner_patient_appointment_path(@owner, @patient), class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
