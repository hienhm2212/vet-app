<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to 'Chủ nuôi', owners_path %></li>
          <li class="breadcrumb-item"><%= link_to @owner.name, owner_path(@owner) %></li>
          <li class="breadcrumb-item active">Chỉnh sửa</li>
        </ol>
      </nav>

      <div class="card">
        <div class="card-header">
          <h2 class="card-title mb-0">Chỉnh sửa Chủ nuôi</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @owner, local: true do |form| %>
            <% if @owner.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@owner.errors.count, "lỗi") %> đã xảy ra:</h4>
                <ul>
                  <% @owner.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :name, 'Tên chủ nuôi', class: 'form-label' %>
                  <%= form.text_field :name, class: 'form-control', placeholder: 'Nhập tên chủ nuôi' %>
                </div>
              </div>
              
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :phone, 'Số điện thoại', class: 'form-label' %>
                  <%= form.telephone_field :phone, class: 'form-control', placeholder: '0901234567' %>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :email, 'Email', class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control', placeholder: 'example@email.com' %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to 'Quay lại', owner_path(@owner), class: 'btn btn-secondary' %>
              <%= form.submit 'Cập nhật', class: 'btn btn-warning' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
