<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <!-- Breadcrumb -->
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to 'Chủ nuôi', owners_path %></li>
          <li class="breadcrumb-item active"><%= @owner.name %></li>
        </ol>
      </nav>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Thông tin Chủ nuôi</h1>
        <div class="btn-group" role="group">
          <%= link_to 'Sửa', edit_owner_path(@owner), class: 'btn btn-warning' %>
          <%= link_to 'Quay lại', owners_path, class: 'btn btn-secondary' %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Thông tin cá nhân</h5>
            </div>
            <div class="card-body">
              <table class="table table-borderless">
                <tr>
                  <td><strong>Tên:</strong></td>
                  <td><%= @owner.name %></td>
                </tr>
                <tr>
                  <td><strong>Số điện thoại:</strong></td>
                  <td><%= format_phone(@owner.phone) %></td>
                </tr>
                <tr>
                  <td><strong>Email:</strong></td>
                  <td><%= @owner.email %></td>
                </tr>
                <tr>
                  <td><strong>Ngày tạo:</strong></td>
                  <td><%= format_datetime_vn(@owner.created_at) %></td>
                </tr>
                <tr>
                  <td><strong>Cập nhật lần cuối:</strong></td>
                  <td><%= format_datetime_vn(@owner.updated_at) %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Thống kê</h5>
            </div>
            <div class="card-body">
              <div class="row text-center">
                <div class="col-6">
                  <div class="border rounded p-3">
                    <h3 class="text-primary"><%= @owner.patients.count %></h3>
                    <p class="mb-0">Bệnh nhân</p>
                  </div>
                </div>
                <div class="col-6">
                  <div class="border rounded p-3">
                    <h3 class="text-success"><%= @owner.patients.joins(:appointments).count %></h3>
                    <p class="mb-0">Lịch hẹn</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Patients section -->
      <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2>Danh sách Bệnh nhân</h2>
          <%= link_to 'Thêm bệnh nhân mới', new_owner_patient_path(@owner), class: 'btn btn-success' %>
        </div>

        <% if @owner.patients.any? %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Tên</th>
                  <th>Loài</th>
                  <th>Giống</th>
                  <th>Giới tính</th>
                  <th>Tuổi</th>
                  <th>Cân nặng</th>
                  <th>Số lịch hẹn</th>
                  <th>Thao tác</th>
                </tr>
              </thead>
              <tbody>
                <% @owner.patients.each do |patient| %>
                  <tr>
                    <td><strong><%= patient.name %></strong></td>
                    <td><%= patient.species %></td>
                    <td><%= patient.breed %></td>
                    <td><%= gender_display(patient.gender) %></td>
                    <td><%= patient.age_display %></td>
                    <td><%= patient.weight_display %></td>
                    <td>
                      <span class="badge bg-info"><%= patient.appointments.count %></span>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <%= link_to 'Xem', owner_patient_path(@owner, patient), class: 'btn btn-sm btn-outline-primary' %>
                        <%= link_to 'Sửa', edit_owner_patient_path(@owner, patient), class: 'btn btn-sm btn-outline-warning' %>
                        <%= link_to 'Lịch hẹn', owner_patient_appointments_path(@owner, patient), class: 'btn btn-sm btn-outline-info' %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="alert alert-info text-center">
            <h4>Chưa có bệnh nhân nào</h4>
            <p>Hãy thêm bệnh nhân đầu tiên cho chủ nuôi này.</p>
            <%= link_to 'Thêm bệnh nhân mới', new_owner_patient_path(@owner), class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
